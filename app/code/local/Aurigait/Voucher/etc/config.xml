<?xml version="1.0"?>
<config>
  <modules>
    <Aurigait_Voucher>
      <version>0.1.0</version>
    </Aurigait_Voucher>
  </modules>
  <frontend>
    <routers>
      <voucher>
        <use>standard</use>
          <args>
            <module>Aurigait_Voucher</module>
            <frontName>voucher</frontName>
          </args>
      </voucher>
    
      
    </routers>
		<layout>
		  <updates>
			<voucher>
			  <file>voucher.xml</file>
			</voucher>
		  </updates>
		</layout>
	<events>
	
      <customer_register_success>
        <observers>
          <aurigait_voucher_observer>
            <type>singleton</type>
            <class>voucher/observer</class>
            <method>mailwelcomevouhcer</method>
          </aurigait_voucher_observer>
        </observers>
      </customer_register_success>
      
      
      <sales_quote_collect_totals_after>
      	<observers>
      		<aurigait_voucher_observer>
      		    <type>singleton</type>
	            <class>voucher/observer</class>
	            <method>setDiscount</method>
      		</aurigait_voucher_observer>
      	</observers>
      	
      </sales_quote_collect_totals_after>
      
      <sales_order_invoice_save_after>
      		<observers>
      		<aurigait_voucher_observer>
      		    <type>singleton</type>
	            <class>voucher/observer</class>
	            <method>UpdateCustomCoupon</method>
      		</aurigait_voucher_observer>
      	</observers>
      	
      </sales_order_invoice_save_after>
       
    </events>
    
		
		
  </frontend>
  
