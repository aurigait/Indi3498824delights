<?xml version="1.0"?>
<config>
  <modules>
    <Aurigait_Landingpage>
      <version>0.1.0</version>
    </Aurigait_Landingpage>
  </modules>
  <frontend>
    <routers>
      <landingpage>
        <use>standard</use>
          <args>
            <module>Aurigait_Landingpage</module>
            <frontName>landingpage</frontName>
          </args>
      </landingpage>
    </routers>
		<layout>
		  <updates>
			<landingpage>
			  <file>aurigait_landingpage.xml</file>
			</landingpage>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <landingpage>
        <class>Aurigait_Landingpage_Helper</class>
      </landingpage>
    </helpers>
	<blocks>
	  <landingpage>
		<class>Aurigait_Landingpage_Block</class>
	  </landingpage>
	</blocks>
  </global>
</config> 